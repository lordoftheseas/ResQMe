{
  "name": "resqme",
  "version": "1.0.0",
  "description": "Admin console for the ResQMe Disaster Management System.",
  "main": "dist/simple-main.js",
  "scripts": {
    "start": "npm run build && concurrently \"npm:watch\" \"electron .\"",
    "build": "npm run build:ts && npm run build:css && npm run copy:assets",
    "watch": "concurrently \"npm:watch:ts\" \"npm:watch:css\" \"npm:watch:assets\"",
    "build:ts": "tsc && tsc simple-main.ts --outDir dist && tsc simple-preload.ts --outDir dist",
    "watch:ts": "tsc -w",
    "build:css": "tailwindcss -i ./public/styles.css -o ./dist/main.css",
    "watch:css": "CHOKIDAR_USEPOLLING=1 tailwindcss -i ./public/styles.css -o ./dist/main.css --watch",
    "copy:assets": "cpx \"./public/index.html\" ./dist && cpx \"./src/database/migrations/**/*.js\" ./dist/database/migrations",
    "watch:assets": "CHOKIDAR_USEPOLLING=1 cpx \"./public/index.html\" ./dist --watch & CHOKIDAR_USEPOLLING=1 cpx \"./src/database/migrations/**/*.js\" ./dist/database/migrations --watch",
    "postinstall": "electron-rebuild"
  },
  "keywords": ["disaster-relief", "mesh-network", "electron", "esp32"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron": "^28.2.3",
    "knex": "^3.1.0",
    "leaflet": "^1.9.4",
    "serialport": "^12.0.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/leaflet": "^1.9.8",
    "@types/node": "^20.11.24",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "cpx": "^1.5.0",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  }
}
